#Langton's Ant# 

states = white, black, N_white, S_white, E_white, W_white, N_black, S_black, E_black, W_black

#Initial State#
.....

Rule N_white
{
	set(x,y,black)
	if(getstate(x+1,y) = black)
	{
		set(x+1,y,E_black)
	}
	else
	{
		set(x+1,y,E_white)
	}
}

Rule S_white
{
	set(x,y,black)
	if(getstate(x-1,y) = black)
	{
		set(x-1,y,W_black)
	}
	else
	{
		set(x-1,y,W_white)
	}
}

Rule E_white
{
	set(x,y,black)
	if(getstate(x,y-1) = black)
	{
		set(x,y-1,S_black)
	}
	else
	{
		set(x,y-1,S_white)
	}
}

Rule W_white
{
	set(x,y,black)
	if(getstate(x+1,y) = black)
	{
		set(x+1,y,N_black)
	}
	else
	{
		set(x+1,y,N_white)
	}
}

Rule N_black
{
	set(x,y,white)
	if(getstate(x-1,y) = black)
	{
		set(x-1,y,E_black)
	}
	else
	{
		set(x-1,y,E_white)
	}
}

Rule S_black
{
	set(x,y,white)
	if(getstate(x+1,y) = black)
	{
		set(x+1,y,W_black)
	}
	else
	{
		set(x+1,y,W_white)
	}
}

Rule E_black
{
	set(x,y,white)
	if(getstate(x,y+1) = black)
	{
		set(x,y+1,S_black)
	}
	else
	{
		set(x,y+1,S_white)
	}
}

Rule W_black
{
	set(x,y,white)
	if(getstate(x-1,y) = black)
	{
		set(x-1,y,N_black)
	}
	else
	{
		set(x-1,y,N_white)
	}
}