#Langton's Ant#

GRID 64x64;

#Define states, white and black in this case#
STATES white, black
{	
	#Define members of the state(s)#
	Direction: null, "n", "s", "e", "w";
}





#Set initial state, all cells are white#
INITIAL white
{
	grid[27, 52].Direction = "n";

	#Makes a rectangle of black cells from x = 2 to 5 and y = 2 to 4#
	grid[2 -> 5, 2 -> 4] = black;

}



#Define rules#
RULES
{
	[black]
	{
		if(Direction != 0)
		{
			if(Direction == "n")
			{
				grid[x-1, y].Direction = "w";
			}
			else if(Direction == "s")
			{
				grid[x+1, y].Direction = "e";
			} 
			else if(Direction == "e")
			{
				grid[x, y+1].Direction = "n";
			}
			else
			{
				grid[x, y-1].Direction = "s";
			}

			Direction = null;
			return white;
		}
	}

	[white]
	{
		if(Direction != 0)
		{
			if(Direction == "n")
			{
				grid[x+1, y].Direction = "e";
			}
			else if(Direction == "s")
			{
				grid[x-1, y].Direction = "w";
			} 
			else if(Direction == "e")
			{
				grid[x, y-1].Direction = "s";
			}
			else
			{
				grid[x, y+1].Direction = "n";
			}

			Direction = null;
			return black;
		}
	}
}

}